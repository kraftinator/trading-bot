<div class="page-header">
  <div class="row">
    <div class="col-lg-12">
      <h1>Add Funds</h1>
    </div>
  </div>
</div>

<%= render partial: "layouts/alerts" %>

<div class="row">
  <div class="col-lg-6">
    <div class="well bs-component">
      <%= form_for @deposit, :html => { :class => 'form-horizontal' } do |f| %>
        <fieldset>
          <%= f.hidden_field :index_fund_coin_id, :value => @deposit.index_fund_coin.id %>
          <div class="form-group">
            <label for="qty" class="col-lg-4 control-label">Deposit Amount (<%= @deposit.index_fund_coin.coin.symbol %>)</label>
            <div class="col-lg-8">
              <%= f.number_field(:qty, step: 1, min: 0, value: @deposit.qty, class: 'form-control') %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-lg-8 col-lg-offset-4">
              <%= link_to 'Cancel', edit_index_fund_path(@deposit.index_fund_coin.index_fund), class: "btn btn-default"%>
              <%= submit_tag "Submit", {:class=>'btn btn-primary'} %>
            </div>
          </div>
        </fieldset>
      <% end %>
    </div>
  </div>
</div>