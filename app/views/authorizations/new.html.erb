<div class="page-header">
  <div class="row">
    <div class="col-lg-12">
      <h1><%= @exchange.name %></h1>
    </div>
  </div>
</div>

<%= render partial: "layouts/alerts" %>

<div class="row">
  <div class="col-lg-6">
    <div class="well bs-component">
      <%= form_for @authorization, url: exchange_authorizations_path, :html => { :class => 'form-horizontal' } do |f| %>
        <fieldset>
          <div class="form-group">
            <label for="api_key" class="col-lg-2 control-label">API Key</label>
            <div class="col-lg-10">
              <%= f.text_field :api_key, {:class=>'form-control'} %>
            </div>
          </div>
          <div class="form-group">
            <label for="api_secret" class="col-lg-2 control-label">API Secret</label>
            <div class="col-lg-10">
              <%= f.text_field :api_secret, {:class=>'form-control'} %>
            </div>
          </div>
          <% if @exchange.has_pass? %>
            <div class="form-group">
              <label for="api_pass" class="col-lg-2 control-label">API Passphrase</label>
              <div class="col-lg-10">
                <%= f.text_field :api_pass, {:class=>'form-control'} %>
              </div>
            </div>
          <% end %>
          <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
              <%= link_to 'Cancel', exchanges_path, class: "btn btn-default"%>
              <%= submit_tag "Submit", {:class=>'btn btn-primary'} %>
            </div>
          </div>
        </fieldset>
      <% end %>
    </div>
  </div>
</div>