<div class="page-header">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="">Trading Pairs</h1>
    </div>
  </div>
</div>

<br><br>

<div class="row">
  <div class="col-lg-8">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Pair</th>
          <th>Max Price</th>
          <th>Precision</th>
          <th>Active Bots</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @trading_pairs.each do |trading_pair| %>
          <tr>
            <td><%= link_to trading_pair.display_name, trading_pair_path( trading_pair ), class: ""%></td>
            <td><%= number_with_precision(trading_pair.max_price, precision: trading_pair.precision) %>
            <td><%= trading_pair.precision %></td>
            <td><%= trading_pair.traders.active.size %></td>
            <td><%= link_to edit_trading_pair_path( trading_pair ) do %><span class="glyphicon glyphicon-pencil"></span><% end %></td>
          </tr>  
        <% end %>
      </tbody>
    </table>
  </div>  
</div>