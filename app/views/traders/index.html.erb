<div class="page-header">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="">Bots</h1>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <table class="table table-striped table-hover datatable-list">
      <thead>
        <tr>
          <th>ID</th>
          <th>PAIR</th>
          <th>STRATEGY</th>
          <th class="text-right">SELLS</th>
          <th class="text-right">AVG SELLS/DAY</th>
          <th class="text-right">DATE LAUNCHED</td>
        </tr>
      </thead>
      <tbody>
        <% @traders.each do |trader| %>
          <tr>
            <td><%= link_to trader.id.to_s, trader_path( trader ) %></td>
            <td><%= link_to trader.trading_pair.display_name, trading_pair_path( trader.trading_pair ) %></td>
            <td><%= trader.display_name %></td>
            <td class="text-right"><%= trader.sell_count.to_s %></td>
            <td class="text-right"><%= number_with_precision( trader.avg_sells_per_day, precision: 2 ) %></td>
            <td class="text-right"><%= trader.created_at.to_date.to_s %></td>
          </tr>  
        <% end %>
      </tbody>
    </table>
  </div>  
</div>