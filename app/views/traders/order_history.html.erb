<div class="page-header">
  <div class="row">
    <div class="col-lg-12">
      <h1>Bot <%= @trader.id.to_s %> Order History</h1>
    </div>
  </div>
</div>

<% if @orders.any? %>
<div class="row">
  <div class="col-lg-12">
    <table class="table table-striped table-hover sortable">
      <thead>
        <tr>
          <th>ID</th>
          <th>SIDE</th>
          <th>QTY (<%= "#{@trader.trading_pair.token.symbol}" %>)</th>
          <th>PRICE (<%= "#{@trader.trading_pair.coin.symbol}" %>)</th>
          <th>STATE</th>
          <th>CREATED</th>
          <th>CANCELED</th>
          <th>FILLED</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= order.id.to_s %></td>
            <td><%= order.side %></td>
            <td><%= "#{order.qty.to_i}" %></td>
            <td><%= number_with_precision( order.price, precision: @trader.trading_pair.precision ) %></td>
            <td><%= order.state %></td>
            <td><%= order.created_at.strftime("%Y-%m-%d %H:%M") %></td>
            <td><%= order.state == LimitOrder::STATES[:canceled] ? order.updated_at.strftime("%Y-%m-%d %H:%M") : '---' %></td>
            <td><%= order.filled_at ? order.filled_at.strftime("%Y-%m-%d %H:%M") : '---' %></td>
          </tr>  
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<% end %>