<div class="page-header">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="">Campaigns</h1>
    </div>
  </div>
</div>

<br><br>

<% if @campaigns.any? %>
<div class="row">
  <div class="col-lg-8">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Pair</th>
          <th>Exchange</th>
          <th>Max Price</th>
          <th>Active Bots</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @campaigns.each do |campaign| %>
          <tr>
            <td><%= link_to campaign.exchange_trading_pair.display_name, campaign_path( campaign ) %></td>
            <td><%= campaign.exchange.name %>
            <td><%= "#{number_with_precision( campaign.max_price, precision: campaign.exchange_trading_pair.price_precision )} #{campaign.exchange_trading_pair.coin2.symbol}" %></td>
            <td><%= campaign.traders.active.size %></td>
            <td><%= link_to edit_campaign_path( campaign ) do %><span class="glyphicon glyphicon-pencil"></span><% end %></td>
          </tr>  
        <% end %>
      </tbody>
    </table>
  </div>  
</div>
<% end %>