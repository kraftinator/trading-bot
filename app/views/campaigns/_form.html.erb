<%= render partial: "layouts/alerts" %>

<div class="row">
  <div class="col-lg-6">
    <div class="well bs-component">
      <%= form_for @campaign, :html => { :class => 'form-horizontal' } do |f| %>
        <fieldset>
          <div class="form-group">
            <label for="exchange_trading_pair" class="col-lg-2 control-label">Pair</label>
            <div class="col-lg-10">
              <%= f.select( :exchange_trading_pair_id , options_from_collection_for_select( @exchange_trading_pairs, :id, :full_display_name, @campaign.exchange_trading_pair_id ), {:prompt=>'â€”'}, {:class=>'form-control'}) %>
            </div>
          </div>
          <div class="form-group">
            <label for="max_price" class="col-lg-2 control-label">Max Price</label>
            <div class="col-lg-10">
              <%= f.number_field( :max_price, min: 0, step: 0.001, class: 'form-control' ) %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
              <%= link_to 'Cancel', campaigns_path, class: "btn btn-default"%>
              <%= submit_tag "Submit", {:class=>'btn btn-primary'} %>
            </div>
          </div>
        </fieldset>
      <% end %>
    </div>
  </div>
</div>