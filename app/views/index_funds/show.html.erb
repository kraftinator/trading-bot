<div class="page-header">
  <div class="row">
    <div class="col-lg-12">
      <h1><%= @index_fund.name %> Index Fund</h1>
    </div>
  </div>
</div>

<br><br>

<h2>Allocations</h2>

<% if @index_fund.index_fund_coins.any? %>
  <div class="row">
    <div class="col-lg-8">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Coin</th>
          </tr>
        </thead>
        <tbody>
          <% @index_fund.index_fund_coins.each do |index_fund_coin| %>
            <tr>
              <td>
                <%= index_fund_coin.coin.symbol %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% end %>